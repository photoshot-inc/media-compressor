<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        app:layout_constraintDimensionRatio="0.9"
        app:layout_constraintTop_toTopOf="parent">

        <devs.core.views.ClippedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_8dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/expand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/close_icon_bg"
            android:padding="6dp"
            android:src="@drawable/ic_outline_fullscreen_exit_24" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>